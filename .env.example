# NicheConnect Environment Variables
# Copy this file to .env.local and fill in your actual values

# OnchainKit Configuration (required for Base Mini Apps)
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key_here

# Supabase Configuration (required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# AI/ML Configuration (required for AI matching features)
OPENAI_API_KEY=your_openai_api_key_here
# Alternative: Use OpenRouter for multiple AI models
# OPENROUTER_API_KEY=your_openrouter_api_key_here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=NicheConnect

# Development/Production Environment
NODE_ENV=development

# Optional: Analytics and Monitoring
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id
# SENTRY_DSN=your_sentry_dsn

# Optional: Email Service (for notifications)
# RESEND_API_KEY=your_resend_api_key
# NEXT_PUBLIC_SUPPORT_EMAIL=support@nicheconnect.com

# Optional: File Upload (for profile pictures, etc.)
# NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
# CLOUDINARY_API_KEY=your_cloudinary_api_key
# CLOUDINARY_API_SECRET=your_cloudinary_api_secret
